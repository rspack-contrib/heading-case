{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node16"
  },
  "include": ["src"]
}
